# Configuracao do Banco de Dados PostgreSQL
DATABASE_URL=postgresql://docq_user:docq_password@localhost:5432/docq_db

# Configuracao do Qdrant (Vector Database)
QDRANT_URL=http://localhost:6333

# Chaves de API para LLMs
GROQ_API_KEY="YOUR_API_KEY"
OPENAI_API_KEY="YOUR_API_KEY"

# Configuracoes de Chunking
CHUNK_SIZE=300
CHUNK_OVERLAP=50

# Configuracoes de Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./data/uploads

# Configuracoes de Log
LOG_LEVEL=INFO

# Configuracoes do FastAPI
API_HOST=0.0.0.0
API_PORT=8000

# Modelo de embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Configuracoes de OCR
OCR_CONFIDENCE_THRESHOLD=0.6
OCR_LANGUAGE=pt

# Extracao de metadados
ENABLE_METADATA_EXTRACTION=true

# Cache
ENABLE_CACHE=true
CACHE_TTL=3600

# Seguranca
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Performance
MAX_WORKERS=4
TIMEOUT_SECONDS=300
